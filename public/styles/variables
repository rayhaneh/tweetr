$green  : #99b898;
$lgreen : #C7D8C7;
$dgreen : #6F866F;
$beige  : #fff;
$dred   : #A93645;
$red    : #e84a5f;
$grey   : #2a363b;
$lgrey  : #676F73;
$vlgrey : #F2F2F2;



@mixin linear-gradient($direction, $color-stops...) {
  background: nth(nth($color-stops, 1), 1);
  background: -webkit-linear-gradient(legacy-direction($direction), $color-stops);
  background: linear-gradient($direction, $color-stops);
}